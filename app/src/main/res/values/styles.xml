<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="labelDefaut" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="Title">
        <item name="android:textColor">#14adb8</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="subTitle">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="ratingValue">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
        <item name="colorControlNormal">#33000000</item>
        <item name="colorControlActivated">#ffc71e</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="ratingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">#33000000</item>
        <item name="colorControlActivated">#ffc71e</item>
        <item name="android:colorControlNormal">#33000000</item>
        <item name="android:colorControlActivated">#ffc71e</item>
        <item name="android:numStars">5</item>
        <item name="android:max">5</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>
    <style name="Text">

    </style>
</resources>
